<%= content_for :group_banner, @group.banner %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Group category:</strong>
  <%= @group.group_category %>
</p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>

<p>
  <strong>Logo:</strong>
    <%= cl_image_tag @group.logo %>
</p>

<p>
  <strong>Banner:</strong>
  <%= @group.banner %>
</p>

<p>
  <strong>Owner:</strong>
    <%= @owner_profile.full_name %>
</p>

<p>
  <strong>Owner:</strong>
    <%= @group.tag_list %>
</p>

<!--trying to show the users in the group-->
<p>
<strong>Members:</strong>
<% @group.users.each do |user| %>
    <%= user.profile.full_name %>
<% end %>
</p>

<p>
<strong>Tags:</strong>
    <% @group.tags.each do |tag| %>
    <%= link_to tag, groups_path(tag: tag.name), class: 'label label-pill label-success' %>
<% end %>
</p>

<%= link_to 'Create New Event', new_event_path, class: 'btn btn-alert' %>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
